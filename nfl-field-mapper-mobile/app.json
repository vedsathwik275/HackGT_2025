{
  "expo": {
    "name": "NFL Field Mapper",
    "slug": "nfl-field-mapper-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2d5a27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos of football plays for analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images of football plays for analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2d5a27"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select football play images for analysis.",
          "cameraPermission": "The app accesses your camera to let you take photos of football plays for analysis."
        }
      ],
      [
        "expo-document-picker"
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "cffc2b69-9074-404d-ab29-8a1a328674f7"
      }
    }
  }
}
